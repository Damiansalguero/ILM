<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/styles/portfolio.css">
<link rel="stylesheet" href="/styles/styles.css">
<div class="form">
  <h1 class="">Block Hinzufügen</h1>
  <div class="col-6 offset-3">
    <form action="/portfolio/<%=port._id%>?_method=PUT" method="post" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label" for="title">Überschrift</label>
        <input class="form-control" type="text" id="title" name="port[title]" required value="<%=port.title%>">
      </div>
      <div class="mb-3">
        <label class="form-label" for="subtitle">Untertitel</label>
        <input class="form-control" type="text" id="subtitle" name="port[subtitle]" required value="<%=port.subtitle%>">
      </div>
      <label class="form-label">Bilder</label>
      <div class="input-group mb-3">
        <div class="custom-file">
          <input type="file" name="image" id="image" class="custom-file-input form-control" id="inputGroupFile02" lang="de" multiple>
          <label class="custom-file-label" id="file-input-new" for="inputGroupFile02" aria-describedby="inputGroupFileAddon02">Datei Auswählen</label>
        </div>
      </div>
      <div class="mb-3" id="thumbnail-box">
        <% port.images.forEach(function(img, i) { %>
          <img src="<%= img.thumbnail %>" class="thumbnail" alt="">
          <div class="form-check-inline">
            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename %>">
            <label for="image-<%=i%>">Löschen?</label>
          </div>
        <% }) %>
      </div>
      <div class="mb-3">
        <button class="btn btn-primary">Speichern</button>
      </div>
    </form>
    <a class="btn btn-primary" href="/home/#portfolio">Zurück</a>
  </div>
</div>
