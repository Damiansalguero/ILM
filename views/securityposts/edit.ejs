          CKEDITOR.replace('description');
        </script>
      </div>
      <div class="mb-3">
        <label class="form-label" for="textone">Text 1</label>
        <textarea class="form-control" type="text" id="textone" name="security[textone]" required><%=security.textone%></textarea>
        <script>
          CKEDITOR.replace('textone');
        </script>
      </div>
      <div class="mb-3">
        <label class="form-label" for="texttwo">Text 2</label>
        <textarea class="form-control" type="text" id="texttwo" name="security[texttwo]" required><%=security.texttwo%></textarea>
        <script>
          CKEDITOR.replace('texttwo');
        </script>
      </div>
      <div class="mb-3">
        <button class="btn btn-primary">Speichern</button>
      </div>
    </form>
