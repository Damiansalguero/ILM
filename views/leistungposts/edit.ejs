<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/styles.css">
<div class="form" id="form-information-new">
  <h1 class="">Text Bearbeiten</h1>
  <div class="col-6 offset-3">
    <form action="/leistungen/<%=leistung._id%>?_method=PUT" method="post">
      <div class="mb-3">
        <label class="form-label" for="title">Titel</label>
        <input class="form-control" type="text" id="title" name="leistung[title]" value="<%=leistung.title%>" required>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Titel Unterschrift</label>
        <textarea class="form-control" type="text" id="description" name="leistung[description]" required><%=leistung.description%></textarea>
        <script>
          CKEDITOR.replace('description');
        </script>
      </div>
      <div class="mb-3">
        <label class="form-label" for="textone">Text 1</label>
        <textarea class="form-control" type="text" id="textone" name="leistung[textone]" required><%=leistung.textone%></textarea>
        <script>
          CKEDITOR.replace('textone');
        </script>
      </div>
      <div class="mb-3">
        <label class="form-label" for="texttwo">Text 2</label>
        <textarea class="form-control" type="text" id="texttwo" name="leistung[texttwo]" required><%=leistung.texttwo%></textarea>
        <script>
          CKEDITOR.replace('texttwo');
        </script>
      </div>
      <div class="mb-3">
        <button class="btn btn-primary">Speichern</button>
      </div>
    </form>
    <a class="btn btn-primary" href="/infrastruktur">Zur√ºck</a>
  </div>
</div>
