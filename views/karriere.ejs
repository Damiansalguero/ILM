<%- include("./partials/navbartwo")%>
<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/styles/subpages.css">
<link rel="stylesheet" href="/styles/karriere.css">

<div class="block-subpage justify-content-center">
  <section class="bg-primary text-center sub-section-one">
    <h2 class="text-white mt-0 ">Karriere und Jobs</h2>
    <hr class="divider divider-two light my-4" />
  </section>
  <section id="section-table">
    <table class="table table-dark table-hover">
  <thead>
    <tr>
      <th scope="col">Titel</th>
      <th scope="col">Einstiegsdatum</th>
      <th scope="col">Ort</th>
      <th scope="col">Information</th>
    </tr>
  </thead>
  <tbody>
    <% for(let job of jobs) {%>
    <tr>
      <td><%= job.title %></td>
      <td><%= job.date %></td>
      <td><%= job.location %></td>
      <td><a href=" /karriere/jobs/<%= job._id %>""> Mehr ...</a></td>
    </tr>
    <% }%>
  </tbody>
</table>
<% if(currentUser) {%>
  <div class="btn-box">
  <a href="/karriere/jobs/neu" class="btn  btn-primary" id="btn-back">Jobpost Hinzufügen</a>
  </div>
<% } %>
  </section>
  <div class="back-button">
    <a class="btn btn-primary" href="/home"><i class="fas fa-arrow-circle-left"></i>Zurück</a>
  </div>

</div>
